<div id="<%= dom_id provenance_record %>">
  <p>
    <strong>Accession number:</strong>
    <%= provenance_record.accession_number %>
  </p>

  <p>
    <strong>Collection name:</strong>
    <%= provenance_record.collection_name %>
  </p>

  <p>
    <strong>Start year:</strong>
    <%= provenance_record.start_year %>
  </p>

  <p>
    <strong>End year:</strong>
    <%= provenance_record.end_year %>
  </p>

  <p>
    <strong>Date expression:</strong>
    <%= provenance_record.date_expression %>
  </p>

  <p>
    <strong>Year received:</strong>
    <%= provenance_record.year_received %>
  </p>

  <p>
    <strong>Month received:</strong>
    <%= provenance_record.month_received %>
  </p>

  <p>
    <strong>Day received:</strong>
    <%= provenance_record.day_received %>
  </p>

  <p>
    <strong>Linear feet:</strong>
    <%= provenance_record.linear_feet %>
  </p>

  <p>
    <strong>Containers:</strong>
    <%= provenance_record.containers %>
  </p>

  <p>
    <% provenance_record.provenance_files.each do |file| %>
      <% if file.representable? %>
        <%= image_tag file.representation(resize_to_limit: [100, 100]) %>
      <% else %>
        <%= link_to file.filename, rails_blob_path(file, disposition: 'attachment') %>
      <% end%>
    <% end %>
  </p>

</div>
